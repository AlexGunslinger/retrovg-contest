<!DOCTYPE html>
<html>
<head>
  <title>Yolympics</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body id="<%= controller_name %>-<%= action_name %>">

  <div class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand">
          <%= link_to(main_title, root_path) %> <%= image_tag('wolflogo.png', class: "brand-logo") %>
        </span>
      </div>
      <div class="navbar-collapse collapse navbar-responsive-collapse navbar-right">
        <ul class="nav navbar-nav">
          <li class="<%= controller_name == 'home' ? 'active' : '' %>"><%= link_to "Scoreboard", root_path %></li>
          <li class="<%= controller_name == 'games' ? 'active' : '' %>"><%= link_to "Games", games_path %></li>
          <li class="<%= controller_name == 'submissions' ? 'active' : '' %>"><%= link_to "Submit Score", submit_path %></li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="back-container" style = 'background: url("<%= @game.background_link if @game %>") no-repeat center; background-size: cover;'>
    <div class="container main-container <%= controller_name == 'games' && action_name == 'scoreboard' ? 'game-scoreboard' : '' %>">
      <%= render 'flash' %>
      <%= yield %>
    </div>
  </div>

  <%= render 'footer' %>

</body>
</html>
