.page-header
  %h1.text-left Main Scoreboard


.row
  .col-lg-8
    %table.table.table-striped.table-hover.main-scoreboard
      %thead
        %tr
          %th Pos
          %th Player
          %th Score
      %tbody
        - @players.each_with_index do |p, i|
          %tr
            %td
              = i + 1
            %td 
              = p[:name]
            %td 
              = p[:points]

  .col-lg-4
    .panel.panel-primary
      .panel-heading
        %h3.panel-title 
          Latest Submissions
      .list-group
        - @latest_sub.each do |submission|
          .list-group-item
            %span.badge
              = submission.score
            = player_submission(submission) 
      
    / .list-group
    /   .list-group-item.panel-primary.active
    /     Latest Submissions
    /   - @latest_sub.each do |submission|
    /     .list-group-item
    /       = "#{link_to(submission.user.name, '#')} <span class='small'>scored</span> #{submission.score} <span class='small'>playing</span> #{link_to(submission.game.name, scoreboard_game_path(submission.game))}".html_safe