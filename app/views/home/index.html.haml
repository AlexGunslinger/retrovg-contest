.page-header
  %h1.text-center Main Scoreboard

%table.table.table-striped.table-hover.main-scoreboard
  %thead
    %tr
      %th Pos
      %th Player
      %th Score
  %tbody
    - @players.each_with_index do |p, i|
      %tr
        %td
          = i + 1
        %td 
          = p[:name]
        %td 
          = p[:points]