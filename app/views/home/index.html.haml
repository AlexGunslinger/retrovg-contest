.page-header
  %h1.text-left Main Scoreboard

.row
  .col-lg-8
    %table.table.table-striped.table-hover.main-scoreboard
      %thead
        %tr
          %th Pos
          %th Player
          %th Score
      %tbody
        - @players.each_with_index do |p, i|
          %tr{ class: ("info" if cookies[:player_id].to_i == p[:id])}
            %td
              = i + 1
            %td 
              = p[:name]
            %td 
              = p[:points]

  .col-lg-4
    .panel.panel-primary
      .panel-heading
        %h3.panel-title 
          Latest Submissions
      .list-group
        - @latest_sub.each do |submission|
          .list-group-item
            %span.badge
              = submission.score
            = player_submission(submission)