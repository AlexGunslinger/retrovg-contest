.row
  .col-lg-12
    .page-header
      %h1 
        = "#{@game.name} Scoreboard" 
        = link_to_ru(@game, "Go to Retro Uprising Page")


%table.table.table-striped.table-hover
  %thead
    %tr
      %th Pos
      %th Player
      %th Score
  %tbody
    - @players.each_with_index do |player, i|
      %tr
        %td
          = i + 1
        %td 
          = player.name
        %td 
          = player.max_score