.row
  .col-lg-12
    .page-header
      %h1 
        = "#{@game.name} Scoreboard"
        = button_link(@game.link, 'Go to Retro Uprising Page', 'btn-primary', 'blank')
        = button_link(games_path, "Back to Game List") 

.row
  .col-lg-8
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th Pos
          %th Player
          %th Score
      %tbody
        - @players.each_with_index do |player, i|
          %tr
            %td
              = i + 1
            %td 
              = player.name
            %td 
              = player.max_score  

  .col-lg-4
    .panel.panel-primary
      .panel-heading
        %h3.panel-title 
          Latest Submissions
      .list-group
        - @latest_sub.each do |submission|
          .list-group-item
            %span.badge
              = submission.score
            = submission.user.name