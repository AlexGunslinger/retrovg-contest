.page-header
  %h1 
    = "#{@game.name} Scoreboard" 

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Pos
      %th Player
      %th Score
  %tbody
    - @players.each_with_index do |player, i|
      %tr
        %td
          = i + 1
        %td 
          = player.name
        %td 
          = player.max_score